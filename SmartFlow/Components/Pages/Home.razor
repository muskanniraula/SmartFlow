@page "/home"


@using SmartFlow.Models.Constant
@inject NavigationManager Navigation
@inject NavigationManager NavManager

<link href="css/home.css" rel="stylesheet" />

<div class="container">
    <!-- Header -->
    <div class="header">
        <div class="logo">LOGO</div>
        <nav class="nav">
            <a href="Components/Pages/Home.razor" class="nav-link active">Dashboard</a>
            <a href="Components/Pages/Transaction.razor" class="nav-link">Transactions</a>
            <a href="Components/Pages/Debt.razor" class="nav-link">Debts</a>
        </nav>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card dark">
            <div class="stat-label">Current Balance</div>
            <div class="stat-value">$975</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Total Income</div>
            <div class="stat-value">$1250</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Total Expense</div>
            <div class="stat-value">$250</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Total Debts</div>
            <div class="stat-value">$50</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Remaining Debts</div>
            <div class="stat-value">$25</div>
        </div>
    </div>

    <!-- Pending Debts -->
    <div class="section-header">
        <h2 class="dashboard_heading">Pending Debts</h2>
        <select class="dropdown">
            <option>This Week</option>
            <option>This Month</option>
            <option>This Year</option>
        </select>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Debt Name</th>
                <th>Type</th>
                <th>Category</th>
                <th>Start Date</th>
                <th>Due Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#12345</td>
                <td>Salary</td>
                <td class="debit">Debt</td>
                <td>Salary</td>
                <td>12/18/2024</td>
                <td>12/18/2024</td>
                <td>$300</td>
                <td><span class="status pending">Pending</span></td>
                <td><button class="delete-btn">🗑️</button></td>
            </tr>
            <tr>
                <td>#12345</td>
                <td>Rent</td>
                <td class="debit">Debt</td>
                <td>Rent</td>
                <td>12/18/2024</td>
                <td>12/18/2024</td>
                <td>$500</td>
                <td><span class="status overdue">Overdue</span></td>
                <td><button class="delete-btn">🗑️</button></td>
            </tr>
        </tbody>
    </table>

    <!-- Recent Transactions -->
    <div class="section-header">
        <h2 class="dashboard_heading">Recent Transactions</h2>
        <select class="dropdown">
            <option>Sort By</option>
            <option>Date</option>
            <option>Amount</option>
        </select>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Transaction Name</th>
                <th>Type</th>
                <th>Category</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#12345</td>
                <td>Salary</td>
                <td class="credit">Credit</td>
                <td>Salary</td>
                <td>12/18/2024</td>
                <td>$300</td>
                <td><span class="status completed">Completed</span></td>
                <td><button class="delete-btn">🗑️</button></td>
            </tr>
            <tr>
                <td>#12345</td>
                <td>Rent</td>
                <td class="debit">Debit</td>
                <td>Rent</td>
                <td>12/18/2024</td>
                <td>$500</td>
                <td><span class="status failed">Failed</span></td>
                <td><button class="delete-btn">🗑️</button></td>
            </tr>
            <tr>
                <td>#12345</td>
                <td>Groceries</td>
                <td class="debit">Debit</td>
                <td>Groceries</td>
                <td>12/18/2024</td>
                <td>$300</td>
                <td><span class="status completed">Completed</span></td>
                <td><button class="delete-btn">🗑️</button></td>
            </tr>
            <tr>
                <td>#12345</td>
                <td>Salary</td>
                <td class="credit">Credit</td>
                <td>Salary</td>
                <td>12/18/2024</td>
                <td>$300</td>
                <td><span class="status completed">Completed</span></td>
                <td><button class="delete-btn">🗑️</button></td>
            </tr>
            <tr>
                <td>#12345</td>
                <td>Utilities</td>
                <td class="debit">Debit</td>
                <td>Utilities</td>
                <td>12/18/2024</td>
                <td>$300</td>
                <td><span class="status completed">Completed</span></td>
                <td><button class="delete-btn">🗑️</button></td>
            </tr>
        </tbody>
    </table>
</div>

@code {
    private void NavigateToTransaction()
    {
        Navigation.NavigateTo("/Transaction");
    }
    private void NavigateToDebt()
    {
        Navigation.NavigateTo("/Debt");
    }
    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}