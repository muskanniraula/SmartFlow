@page "/register"
@using SmartFlow.Models.Constant
@inject NavigationManager Navigation
@inject NavigationManager NavManager

<div class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-secondary rounded-2">
                    <div class="card bg-white shadow-lg">
                        <div class="card-body p-5">
                            <form class="mb-1 mt-md-4" @onsubmit="RegisterHandler">
                                <h2 class="fw-bold mb-2">Register</h2>
                                <p class="mb-4">Please sign up with your username, password, and preferred currency.</p>
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control" @bind="Username" placeholder="Enter your username">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" @bind="Password" placeholder="Enter your password">
                                </div>
                                <div class="mb-3">
                                    <label for="currency" class="form-label">Preferred Currency</label>
                                    <select class="form-control" @bind="Currency">
                                        <option value="@PreferredCurrency.NPR">NPR</option>
                                        <option value="@PreferredCurrency.USD">USD</option>
                                        <option value="@PreferredCurrency.EUR">EUR</option>
                                        <option value="@PreferredCurrency.GBP">GBP</option>
                                        <option value="@PreferredCurrency.INR">INR</option>
                                    </select>
                                </div>
                                @if (!string.IsNullOrEmpty(_errorMessage))
                                {
                                    <ErrorMessage Type="danger" Message="@_errorMessage"/>
                                }
                                <div class="mt-4 d-grid">
                                    <button class="btn btn-outline-dark" @onclick="NavigateToLogin">Register</button>
                                </div>
                            </form>
                            <div class="mt-3 text-center">
                                <p>Already have an account? <a href="javascript:void(0);" @onclick="NavigateToLogin">Login</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/");  // Navigates to login page
    }
}
